const { SerialPort } = require('serialport');

const port = new SerialPort({
  path: '/dev/ttyUSB0',
  baudRate: 115200,
  lock: false,  // Â¡Clave para Android!
  autoOpen: false
});

port.open(err => {
  if (err) {
    console.error('âŒ Error al abrir puerto:', err.message);
    console.log('ğŸ”§ Soluciones rÃ¡pidas:');
